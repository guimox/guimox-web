---
import { Icon } from 'astro-icon/components'
import TextParagraph from '../components/text-paragraph.astro'
import TextTitle from '../components/text-title.astro'
import Layout from '../layout/layout.astro'

const title = 'Guilherme Lopes | Software Developer'
const description = 'Homepage of my website, feel free to explore'
const canonical = 'https://guimox.dev'
const current = 'home'
---

<Layout title={title} description={description} canonical={canonical} current={current}>
  <section class="flex flex-col gap-4">
    <TextTitle bold>Guilherme Lopes</TextTitle>
    <TextParagraph>
      Experienced <b>software developer</b> capable of working on the frontend and backend. Interested about anything
      that is related to web (CI/CD, Docker, databases, frontend, backend and cool stuff). Passionate about improving
      & trying things.
    </TextParagraph>
    <TextParagraph>You may find this website dull, but I've built other things.</TextParagraph>
    <div class="flex gap-4">
      <a href="https://github.com/guimox" target="_blank" aria-label="link to open my GitHub">
        <Icon
          name="mdi:github"
          class="text-color cursor-pointer text-2xl font-bold transition-all duration-300 hover:opacity-50 sm:text-2xl"
        />
      </a>
      <a href="https://www.linkedin.com/in/guimox" target="_blank" aria-label="link to open my LinkedIn">
        <Icon
          name="mdi:linkedin"
          class="text-color cursor-pointer text-2xl font-bold transition-all duration-300 hover:opacity-50 sm:text-2xl"
        />
      </a>
    </div>
  </section>
</Layout>
