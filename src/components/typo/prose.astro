<div
  class="article-prose:m-0 prose-img:max-h-82 prose prose-base prose-quoteless tracking-tight text-zinc-700 md:prose-lg marker:text-zinc-700 prose-headings:my-2 prose-headings:text-zinc-700 prose-h1:font-bold prose-h2:font-bold prose-h3:relative prose-h3:text-zinc-700 prose-p:text-justify prose-ol:pl-5 prose-li:list-disc prose-img:w-auto prose-img:rounded prose-inline-code:rounded-sm prose-inline-code:bg-gray-100 prose-inline-code:px-2 prose-inline-code:py-1"
>
  <slot />
</div>

<style>
  :global(.prose h3) {
    display: flex;
    align-items: center;
    font-weight: bold;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  :global(.prose h3 .anchor) {
    opacity: 0;
    text-decoration: none;
    transition: opacity 0.2s;
    margin-left: 0.5rem;
    color: #3f3f46;
  }

  :global(.prose h3:hover .anchor) {
    opacity: 1;
  }

  :global(blockquote) {
    @apply rounded border px-5 transition-all duration-300 hover:bg-gray-100;
  }
</style>

<script>
  function addHeadingAnchors() {
    const headings = document.querySelectorAll('.prose h3')

    headings.forEach((heading) => {
      if (!heading.querySelector('.anchor')) {
        const id =
          heading.id ||
          heading.textContent
            ?.toLowerCase()
            .replace(/[^a-z0-9]+/g, '-')
            .replace(/(^-|-$)/g, '')

        if (id) {
          heading.id = id

          const anchor = document.createElement('a')
          anchor.href = `#${id}`
          anchor.className = 'anchor'
          anchor.textContent = '#'

          const headingText = heading.textContent
          heading.textContent = ''

          const textLink = document.createElement('a')
          textLink.href = `#${id}`
          textLink.textContent = headingText
          textLink.style.textDecoration = 'none'
          textLink.style.color = 'inherit'
          textLink.style.fontWeight = 'bold'

          heading.appendChild(textLink)
          heading.appendChild(anchor)
        }
      }
    })
  }

  addHeadingAnchors()

  document.addEventListener('astro:page-load', addHeadingAnchors)
</script>
