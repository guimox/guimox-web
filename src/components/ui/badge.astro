---
interface Props {
  href?: string
  active?: boolean
}

const { href, active = false } = Astro.props

const baseClasses = 'rounded-sm bg-gray-100 px-2 text-xs sm:text-sm transition-colors duration-150 ease-in-out'
const activeClasses = 'bg-zinc-700 text-white hover:opacity-75'
const inactiveClasses = 'border text-gray-700 hover:bg-gray-200'
const classes = `${baseClasses} ${active ? activeClasses : inactiveClasses}`
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <div class={classes}>
      <slot />
    </div>
  )
}
